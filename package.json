{
  "name": "sanity",
  "private": true,
  "workspaces": [
    "packages/@sanity/*",
    "packages/*"
  ],
  "scripts": {
    "blog-studio": "(cd packages/blog-studio && SANITY_WATCH_MODE=monorepo yarn start)",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "clean-studio": "(cd packages/clean-studio && SANITY_WATCH_MODE=monorepo yarn start)",
    "deploy-test": "run-s build && cd packages/test-studio && sanity deploy",
    "deploy-movies": "run-s build && cd packages/movies-studio && sanity deploy",
    "ecommerce-studio": "(cd packages/ecommerce-studio && SANITY_WATCH_MODE=monorepo yarn start)",
    "example-studio": "(cd packages/example-studio && SANITY_WATCH_MODE=monorepo yarn start)",
    "lint": "eslint . --ext=.js,.jsx,.mjs,.ts,.tsx --quiet",
    "lint:fix": "eslint . --quiet --fix",
    "movies-studio": "(cd packages/movies-studio && SANITY_WATCH_MODE=monorepo yarn start)",
    "normalize-pkgfields": "node scripts/normalizePackageFields.js",
    "now-build": "run-s sanity:build test-studio:build",
    "postinstall": "lerna bootstrap",
    "prettify": "prettier --write \"**/*.js\"",
    "publish": "run-s build && lerna publish --exact",
    "publish-canary": "RELEASE_TAG=canary run-s publish-tag",
    "publish-current-branch": "RELEASE_TAG=`git rev-parse --abbrev-ref HEAD` run-s publish-tag",
    "publish-tag": "RELEASE_TAG=\"${RELEASE_TAG:-canary}\"; lerna publish --canary --force-publish --no-git-tag-version --dist-tag=$RELEASE_TAG --preid=$RELEASE_TAG --exact",
    "release-notes": "node scripts/printReleaseNotesTemplate.js",
    "sanity:build": "lerna run --scope @sanity/* build",
    "start": "run-p test-studio",
    "storybook": "(cd packages/storybook && SANITY_WATCH_MODE=monorepo yarn start)",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "test": "echo 'Run `run-s test-all` to run `npm test` for every package'",
    "test-all": "lerna run test --concurrency=2 --stream",
    "test-studio": "(cd packages/test-studio && SANITY_WATCH_MODE=monorepo yarn start)",
    "test-studio:build": "(cd packages/test-studio && yarn build)",
    "typecheck": "lerna run typecheck",
    "updated": "lerna updated",
    "versions": "node scripts/normalizeDependencyVersions.js",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@now/node": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-lodash": "^3.3.4",
    "boxen": "^4.1.0",
    "chalk": "^2.3.0",
    "deepmerge": "^3.3.0",
    "del": "^5.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "execa": "^1.0.0",
    "fancy-log": "^1.3.3",
    "glob": "^7.1.2",
    "globby": "^9.2.0",
    "hard-rejection": "^2.1.0",
    "husky": "^2.5.0",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "path-exists-cli": "^1.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "semver": "^6.1.2",
    "stylelint": "^10.1.0",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-standard": "^18.0.0",
    "through2": "^3.0.1",
    "typescript": "^3.7.3",
    "yarn": "^1.3.2"
  },
  "husky": {
    "hooks": {
      "commitmsg": "node scripts/validateCommitMessage.js"
    }
  }
}
